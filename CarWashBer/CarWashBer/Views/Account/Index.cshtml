@model CarWashBer.Models.Customer

@{
    ViewData["Title"] = "My Account";
}

<h1>My account</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            eMail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            <a asp-action="ChangePassword">Change Password</a>
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Is eMail confirmed?
        </dt>
        @if (Model.EmailConfirmed)
        {
            <dd class="col-sm-10">
                Yes
            </dd>
         }
        else
        {
            <dd class="col-sm-10">
                No. <a asp-action="SendActivationCode">Resend code?</a>
            </dd>
        }
    </dl>
</div>
<div>
    <form asp-action="DeleteAccount" method="post">
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete your account? All your data will be lost')">
            Do you want to delete the account?
        </button>
    </form>
</div>
